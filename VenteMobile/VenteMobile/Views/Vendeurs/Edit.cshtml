@model VenteMobile.Models.Vendeur

@{
    ViewData["Title"] = "Edit";
}


<div class="form-horizontal" style="margin-top:60px; margin-bottom:10px;">
    <h4 class="text-center table-bordered alert-success" style="border-radius:5px; padding:10px;">Changer les informations de vendeur</h4>
    <div class="dl-horizontal table-bordered jumbotron alert-info " style="color:black;">
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="VendeurId" />
                    <div class="form-group">
                        <div class="col-md-10">
                            <label asp-for="VendeurNom" class="control-label"><B>Nom</B></label>
                            <input asp-for="VendeurNom" class="form-control" />
                            <span asp-validation-for="VendeurNom" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label asp-for="VendeurAddress" class="control-label"><B>Address</B></label>
                            <input asp-for="VendeurAddress" class="form-control" />
                            <span asp-validation-for="VendeurAddress" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label asp-for="VendeurNoTel" class="control-label"><B>NoTel</B></label>
                            <input asp-for="VendeurNoTel" class="form-control" />
                            <span asp-validation-for="VendeurNoTel" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">

                        <p>
                            <input type="submit" class="btn  btnStyle" style="background-color:green; width:120px;" value="Sauvegarder" /> |
                            <a href="@Url.Action("Index","Vendeurs")" class="btn  btnStyle" style="background-color:cornflowerblue; width:120px;">Retour</a>

                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


