@model VenteMobile.Models.Telephone

@{
    ViewData["Title"] = "Delete";
}

<h3 style="text-align:center"><B>Supprimer telephone</B></h3>
<h3>Voulez vous vraiment le supprimer?</h3>
<div class="delete">
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.TelephoneModel)*@
            Modèle
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TelephoneModel)
        </dd>
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.TelephoneCout)*@
            Prix
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TelephoneCout)
        </dd>
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.TelephoneCouleur)*@
            Couleur
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TelephoneCouleur)
        </dd>
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.Manufacturier)*@
            Fabriquant
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Manufacturier.ManufacturierMarque)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="TelephoneId" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index">Retour à la liste</a>
    </form>
</div>
