@model VenteMobile.Models.Critique

@{
    ViewData["Title"] = "Details";
}

<h3 style="text-align:center"><B> Details d'une Critique</B></h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.CritiqueText)*@
            Commentaire
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CritiqueText)
        </dd>
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.CritiqueEtoiles)*@
            Etoiles
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CritiqueEtoiles)
        </dd>
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.CritiqueNom)*@
            Client
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CritiqueNom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telephone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telephone.TelephoneModel)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CritiqueId">Edit</a> |
    @Html.ActionLink("Cliquer ici pour revenir", "Details", "Telephones", new { id = Model.Telephone.TelephoneId })
</div>
