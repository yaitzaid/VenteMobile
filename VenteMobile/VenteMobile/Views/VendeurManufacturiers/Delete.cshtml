@model VenteMobile.Models.VendeurManufacturier

@{
    ViewData["Title"] = "Delete";
}

<h3>Voulez vous vraiment Retirer l'assignation de cette manufacturier a ce vendeur?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vendeur)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vendeur.VendeurNom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Manufacturier)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Manufacturier.ManufacturierMarque)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="VendeurId" />
        <input type="hidden" asp-for="ManufacturierId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        @Html.ActionLink("Cliquer ici pour revenir", "List", "VendeurManufacturiers", new { id = Model.Vendeur.VendeurId })
    </form>
</div>
