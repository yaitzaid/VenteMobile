@model VenteMobile.Models.Manufacturier

@{
    ViewData["Title"] = "Create";
}

<h3 style="text-align:center"><B>Ajouter une Manufacturier</B></h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ManufacturierMarque" class="control-label"><B>Marque</B></label>
                <input asp-for="ManufacturierMarque" class="form-control" />
                <span asp-validation-for="ManufacturierMarque" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ManufacturierSiteWeb" class="control-label"><B>SiteWeb</B></label>
                <input asp-for="ManufacturierSiteWeb" class="form-control" />
                <span asp-validation-for="ManufacturierSiteWeb" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ManufacturierOrigine" class="control-label"><B>Siège social</B></label>
                <input asp-for="ManufacturierOrigine" class="form-control" />
                <span asp-validation-for="ManufacturierOrigine" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Créer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>
@section Scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
